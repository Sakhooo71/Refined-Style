{% extends 'base.html.twig' %}

{% block title %}All orders
{% endblock %}



{% block body %}
	<div class="container my-3">
		<h1 class="page-title">All Orders</h1>

		{% for order in orders %}
			<div class="order-card">
				<span>
					<strong>{{ order.orderNumber }}</strong>
				</span>
				<span>
					<strong>Date of order:</strong>
					{{ order.orderDate|date('d-m-Y') }}</span>
				<span>
					<strong>Quantity:</strong>
					{{ order.totalQuantity }}</span>
				<a href="{{ path('admin_order_details', {'orderId': order.id}) }}" class="order-details">Order Details</a>
			</div>
		{% endfor %}
	</div>
{% endblock %}
