{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}



<div class="container my-3 py-3">
    <h1>Product index</h1>
    <div class="scrollable-table">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Product Name</th>
                    <th>Product Price</th>
                    <th>Product Image</th>
                    <th>Short Description</th>
                    <th>Long Description</th>
                    <th>Product Brand</th>
                    <th>Product Origin</th>
                    <th>Type of Offer</th>  
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.productName }}</td>
                        <td>{{ product.productPrice }}</td>
                        <td><img src="{{ asset(product.productImage ?: 'uploads/default.jpg') }}" alt="{{ product.productName }}" width="80" loading="lazy"></td>
                        <td>{{ product.shortDescription }}</td>
                        <td>{{ product.longDescription | raw }}</td>
                        <td>{{ product.productBrand }}</td>
                        <td>{{ product.productOrigin }}</td>
                        <td>{{ product.offer }}</td>
                        <td>
                            <a href="{{ path('app_product_crud_show', {'id': product.id}) }}" data-toggle="tooltip" data-placement="top" title="Show">
                                <i class="far fa-eye"></i>
                            </a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('app_product_crud_edit', {'id': product.id}) }}" class="mx-2" data-toggle="tooltip" data-placement="top" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="{{ path('app_product_crud_delete', {'id': product.id}) }}" 
                                   class="btn-delete" 
                                   data-toggle="tooltip" 
                                   data-placement="top" 
                                   title="Delete"
                                   onclick="return confirm('Are you sure you want to delete this product?');">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_product_crud_new') }}" class="btn btn-primary btn-new btn-lg btn-sm mt-3">Create new</a>
    {% endif %}
</div>

{% endblock %}
