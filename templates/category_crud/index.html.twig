{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}



<div class="container my-3 py-3">
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Category Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.categoryName }}</td>
                    <td><img src="{{ asset('uploads/categories/' ~ category.categoryImage) }}" alt="" width="80"></td>
                    <td>
                        <a href="{{ path('app_category_crud_show', {'id': category.id}) }}" class="mx-2" data-toggle="tooltip" data-placement="top" title="Show">
                            <i class="far fa-eye"></i>
                        </a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_category_crud_edit', {'id': category.id}) }}" data-toggle="tooltip" data-placement="top" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="{{ path('app_category_crud_delete', {'id': category.id}) }}" 
                               class="btn-delete mx-2"
                               data-toggle="tooltip" 
                               data-placement="top" 
                               title="Delete"
                               onclick="return confirm('Are you sure you want to delete this category?');">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_category_crud_new') }}" class="btn btn-primary btn-new btn-lg btn-sm mt-3">Create new</a>
    {% endif %}
</div>

{% endblock %}
